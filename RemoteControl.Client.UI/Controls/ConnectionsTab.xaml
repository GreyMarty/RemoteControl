<UserControl x:Class="RemoteControl.Client.UI.Controls.ConnectionsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RemoteControl.Client.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel VerticalAlignment="Center" LastChildFill="False">
            <Border 
                DockPanel.Dock="Top"
                Width="300">
                <Path
                Margin="20"
                HorizontalAlignment="Center"
                Data="{StaticResource SadFaceIcon}"
                Fill="{StaticResource BackgroundPrimary04dp}"
                Stretch="Uniform"/>
            </Border>

            <Label 
                DockPanel.Dock="Top"
                HorizontalAlignment="Center"
                Foreground="{StaticResource BackgroundPrimary04dp}"
                FontSize="36"
                FontWeight="ExtraBold"
                Content="Not Impemented Yet"/>
        </DockPanel>
    </Grid>
</UserControl>
